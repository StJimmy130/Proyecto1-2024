<link rel="stylesheet" href="~/css/ejerciciosFisicos.css">


<input type="text" id="PersonaID" value="@ViewBag.PersonaID">


<div class="row">
  <div class="col-md-3">
    <label for="BuscarInicioActividad" class="text-white form-label">Inicio de la actividad</label>
    <input type="datetime-local" id="BuscarInicioActividad" class="form-control" />
  </div>
  <div class="col-md-3">
    <label for="BuscarFinActividad" class="text-white form-label">Fin de la actividad</label>
    <input type="datetime-local" id="BuscarFinActividad" class="form-control" />
  </div>
</div>
<div class="mt-2 p-1">
  <button type="button" class="btn btn-primary" onclick="ListadoInforme()">
    Buscar
  </button>
</div>

<table class="table table-primary table-striped">
  <thead class="headTabla">
    <tr>
      <th>Tipo Ejercicio</th>
      <th>INICIO</th>
      <th>FIN</th>
      <th>DURACION</th>
      <th>CALORIAS QUEMADAS</th>
      <th>AL INICIAR:</th>
      <th>AL FINALIZAR:</th>
      <th>OBSERVACIONES</th>
    </tr>
  </thead>
  <tbody class="bodyTabla" id="tbody-ejerciciosportipo"></tbody>
</table>

@section Scripts {
  <script src="~/js/informe.js"></script>
}