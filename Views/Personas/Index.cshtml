@{
  ViewData["Title"] = "Perfil";
}


<link rel="stylesheet" href="~/css/Personas.css">

<input type="hidden" id="PersonaID" value="@ViewBag.PersonaID">

<div class="row">
  <div class="col-12">
    <h1 class="t-stroke t-shadow">PERFIL!</h1>
  </div>
</div>


<div class="row ">
  <div class="col-md-6 col-sm-12">
    <form class="p-4 formPersona">
      <div class="row">
        <div class="coolinput col-md-6 mb-4">
          <label class="text" for="nombre">Nombre completo</label>
          <input type="text" id="NombreCompleto" name="NombreCompleto" class="input" placeholder="Tu nombre completo" />
        </div>
        <div class="coolinput col-md-6 mb-4">
          <label class="text" for="Genero">Genero</label>
          @Html.DropDownList("Genero", ViewBag.Generos as List<SelectListItem>, new { @class = "input" })
        </div>
        <div class="coolinput col-md-4 mb-4">
          <label class="text" for="FechaNacimiento">Fecha de nacimiento</label>
          <input type="date" id="FechaNacimiento" name="FechaNacimiento" class="input" />
        </div>
        <div class="coolinput col-md-4 mb-4">
          <label class="text" for="Peso">Peso en KG</label>
          <input type="text" step="0.01" id="Peso" name="Peso" class="input" placeholder="Peso en kg" />
        </div>
        <div class="coolinput col-md-4 mb-4">
          <label class="text" for="Altura">Altura en CM</label>
          <input type="text" step="0.01" id="Altura" name="Altura" class="input" placeholder="Altura en cm" />
        </div>
      </div>
      <div class="text-center">
        <button type="submit" id="btnGuardar" class="btn btn-outline-success fw-bold btn-safe" onclick="ActualizarInformacion()">Guardar cambios</button>
      </div>
    </form>
  </div>
</div>


@section Scripts {
  <script src="~/js/Personas.js"></script>
}