@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/home.css">


<div class="row">
  <div class="col-lg-12 col-md-12 col-sm-12">
    <h1 class="t-stroke t-shadow">WORKOUT WATCH!</h1>
  </div>
</div>

<input type="text" id="PersonaID" value="@ViewBag.PersonaID">



<div class="row">
  <div class="col-lg-7 col-md-9 col-sm-12">
    <p class="intro">Bienvenido a Workout Watch! Tu guía personal para un estilo de vida más activo y saludable. Registra tus
    entrenamientos, sigue tu progreso y alcanza tus metas fitness con facilidad. Con Workout Watch!, cada paso cuenta.
    ¡Empieza hoy mismo y lleva tu entrenamiento al siguiente nivel!</p>
    <p class="intro2">"Cada día se hace más fácil, pero tienes que hacerlo todos los días, esa es la parte difícil"</p>
  </div>
</div>




@if(!SignInManager.IsSignedIn(User))
{
  <div class="div-btn">  
    <button class="btn-login-home" asp-area="Identity" asp-page="/Account/Login">
      <a asp-area="Identity" asp-page="/Account/Login">Iniciar sesión</a>
    </button>
    <button class="btn-register-home" asp-area="Identity" asp-page="/Account/Register">
      <a  asp-area="Identity" asp-page="/Account/Register">Registrate!</a>
    </button>
  </div> 
}  


@section Scripts {
    <script src="~/js/home.js"></script>  
}

