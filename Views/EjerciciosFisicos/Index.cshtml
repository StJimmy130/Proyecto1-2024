@{
  ViewData["Title"] = "Ejercicios Fisicos";
}

<link rel="stylesheet" href="~/css/ejerciciosFisicos.css">



<h1 class="t-stroke t-shadow">EJERCICIOS!</h1>

<div class="mb-2">
  <button type="button" title="Click para Agregar un Ejercicio Físico" class="buttonAdd"
    onclick="NuevoRegistro()" data-bs-toggle="modal" data-bs-target="#ModalEjercicioFisico">
    <span class="button-content">
      <i class="bi bi-plus-square iconosAddRefresh"></i> Agregar Registro
    </span>
  </button>
  <button type="button" title="Click para Agregar un Ejercicio Físico" class="buttonRefresh"
    onclick="ListadoEjerciciosFisicos()">
    <span class="button-content">
      <i class="bi bi-arrow-clockwise iconosAddRefresh"></i> Refrescar
    </span>
  </button>
</div>


<div class="modal fade" id="ModalEjercicioFisico" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalTitulo"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="FormEjercicioFisico">
          <input type="hidden" id="ejercicioFisicoID" value="0">
          <div class="dropdown">
            <label for="TipoEjercicioID">Seleccione tipo de ejercicio:</label>
            @Html.DropDownList("tipoEjercicioID", null, htmlAttributes: new { @class = "form-control" })
          </div>
          <div class="form-group">
            <label for="inicio">Inicio:</label>
            <input type="datetime-local"  id="inicio" name="inicio">
          </div>
          <div class="form-group">
            <label for="fin">Fin:</label>
            <input type="datetime-local" id="fin" name="fin">
          </div>
          <div class="dropdown">
            <label for="estadoEmocionalInicio">Seleccione estado emocional al iniciar:</label>
            <select class="form-select" id="estadoEmocionalInicio"></select>
          </div>
          <div class="dropdown">
            <label for="estadoEmocionalFin">Seleccione estado emocional al finalizar:</label>
            <select class="form-select" id="estadoEmocionalFin">
              <!-- Las opciones se cargarán dinámicamente desde JavaScript -->
            </select>
          </div>
          <div class="form-group">
            <label for="observaciones">Observaciones:</label>
            <textarea id="observaciones" style="text-transform: uppercase;" name="observaciones" rows="4"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" onclick="LimpiarModal()" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" onclick="GuardarEjerciciosFisicos()" class="btn btn-primary" data-bs-dismiss="modal">Guardar</button>
      </div>
    </div>
  </div>
</div>

<table class="table tablaTipoEjercicios">
  <thead class="headTabla">
    <tr>
      <th>EJERCICIO FÍSICO</th>
      <th>INICIO</th>
      <th>FIN</th>
      <th>ESTADO EMOCIONAL AL FINALIZAR</th>
      <th>ESTADO EMOCIONAL AL INICIAR</th>
      <th>OBSERVACIONES</th>
      <th>EDITAR</th>
      <th>ELIMINAR</th>
    </tr>
  </thead>
  <tbody class="bodyTabla" id="tbody-ejerciciosfisicos"></tbody>
</table>

@section Scripts {
  <script src="~/js/ejerciciosfisicos-1.0.0.js"></script>
}
